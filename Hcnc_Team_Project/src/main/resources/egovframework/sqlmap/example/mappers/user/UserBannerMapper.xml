<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user.mapper.UserBannerMapper">
	<select id="selectBannerListByUser" resultType="java.util.Map">
		SELECT *
		FROM BANNERS
		WHERE 1=1
			AND IS_VISIBLE = 'Y'
		<if test="BANNER_TYPE != null and BANNER_TYPE != ''">
		    AND BANNER_TYPE = #{BANNER_TYPE}
		</if>
		ORDER BY SORT_NUMBER DESC
			   , INPUT_DT DESC
	</select>
</mapper>