        <Combo id="cmb_maincate" left="140" top="210" width="200" height="30" innerdataset="ds_cate_main" codecolumn="MAIN_CATE_ID" datacolumn="MAIN_CATE_NM"/>
        <Combo id="cmb_subcate" left="360" top="210" width="200" height="30" innerdataset="ds_cate_sub" codecolumn="SUB_CATE_ID" datacolumn="SUB_CATE_NM"/>
