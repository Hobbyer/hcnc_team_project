        <Static id="box_basic" left="20" top="270" width="1240" height="280" background="#ffffff" border="1px solid #e0e0e0" borderRadius="10px"/>
        <Static id="sta_basic" text="기본 정보" left="40" top="290" font="bold 12pt 'Gulim'" color="#222222" width="100" height="25"/>
        <Static id="sta_name" text="상품명" left="60" top="330" width="100" height="25"/>
